{% extends 'admin/datatable_layout.html.twig' %}
{% block content %}
    <div class="panel">
        <div class="panel-heading">
            <div class="panel-title">{{ 'admin.event_type.title'|trans }}</div>
        </div>
        <div class="panel-body">
            <a href="{{ path('admin_event_type_add') }}" class="btn btn-info add-btn">Ajouter</a>
            <table id="datatable" class="table table-striped table-bordered dt-responsive nowrap" cellspacing="0"
                   width="100%">
                <thead>
                <tr>
                    <th>{{ 'common.data_table.id'|trans }}</th>
                    <th>{{ 'admin.event_type.title'|trans }}</th>
                    <th>{{ 'common.data_table.actions'|trans }}</th>
                </tr>
                </thead>
                <tbody>
                {% for eventType in eventTypes %}
                    <tr>
                        <td>{{ eventType.id }}</td>
                        <td>{{ eventType.getName() }}</td>
                        <td class="column-actions">
                            <div class="btn-group" role="group" aria-label="...">
                                <a href="{{ path('admin_event_type_edit', {'id':eventType.id}) }}"
                                   class="btn btn-info" title="Modifier"><i
                                            class="fa fa-edit"></i></a>
                                <a href="{{ path('admin_event_type_delete', {'eventType':eventType.id}) }}"
                                   class="btn btn-danger"
                                   onclick="return confirm('{{ 'admin.event_type.delete_confirm'|trans }}')"
                                   title="{{ 'common.button.delete'|trans }}"><i class="fa fa-trash"></i></a>
                            </div>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}
