<table id="datatable" class="table table-striped table-bordered dt-responsive nowrap" cellspacing="0"
       width="100%">
    <thead>
    <tr>
        <th>{{ 'common.data_table.id'|trans }}</th>
        <th>{{ 'admin.booking.user.name'|trans }}</th>
        <th>{{ 'admin.booking.user.email'|trans }}</th>
        <th>{{ 'admin.booking.ticketCategory.label'|trans }}</th>
        <th>{{ 'common.data_table.actions'|trans }}</th>
    </tr>
    </thead>
    <tbody>
    {% for booking in bookings %}
        <tr>
            <td>{{ booking.id }}</td>
            <td>{{ booking.mainUser.fullName }}</td>
            <td>{{ booking.mainUser.email }}</td>
            <td>{{ booking.ticketCategory.label }}</td>
            <td class="column-actions">
                <div class="btn-group" role="group" aria-label="...">
                    <a href=""
                       class="btn btn-info" title="{{ 'common.button.edit'|trans }}">
                        <i class="fa fa-edit"></i>
                    </a>
                    <a href=""
                       class="btn btn-danger"
                       onclick="return confirm('{{ 'admin.event_type.delete_confirm'|trans }}')"
                       title="{{ 'common.button.delete'|trans }}">
                        <i class="fa fa-trash"></i>
                    </a>
                </div>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>
<script>
    $('#datatable').DataTable({
        responsive: true,
        oLanguage: {
            sUrl: "//cdn.datatables.net/plug-ins/1.10.13/i18n/French.json"
        },
        columnDefs: [
            {
                targets: [0],
                visible: false
            }
        ],
        order: [[0, "desc"]]
    });
</script>
