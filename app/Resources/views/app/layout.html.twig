{% extends 'base.html.twig' %}
{% block title %}
    {{ 'app.seo.title'|trans }}
{% endblock %}
{% block meta_description %}
    {{ 'app.seo.description'|trans }}
{% endblock %}
{% block current_stylesheet %}
    <link href="{{ asset('css/app.css') }}" rel="stylesheet">
{% endblock %}

{% block header %}
    <header id="header">

        {# Inclusion du template pour l'entÃªte de la page #}
        {% include 'app/common/header/_header.html.twig' %}

    </header>
{% endblock %}
{% block container %}

    <div class="content">

        {# Block pour le contenu d'une vue #}
        {% block content %}
        {% endblock %}

    </div>
{% endblock %}

{% block footer %}
    <footer class="footer">

        {# Inclusion du template pour le pied de la page #}
        {% include 'app/common/footer/_footer.html.twig' %}

    </footer>
{% endblock %}

{% block current_script %}
    <script src="{{ asset('js/app.min.js') }}"></script>
{% endblock %}
