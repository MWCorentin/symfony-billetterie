{% extends 'app/layout.html.twig' %}

{% form_theme form 'app/form/theme.html.twig' %}

{% block current_stylesheet %}
    {{ parent() }}
    <link href="{{ asset('libraries/bootstrap-datepicker3/bootstrap-datepicker3.css') }}" rel="stylesheet">
{% endblock %}

{% block current_script %}
    {{ parent() }}
    <script type="text/javascript"
            src="{{ asset('libraries/bootstrap-datepicker3/bootstrap-datepicker.min.js') }}"></script>
    <script type="text/javascript"
            src="{{ asset('libraries/bootstrap-datepicker3/locales/bootstrap-datepicker.fr.min.js') }}"></script>
    <script>
        $(document).ready(function () {
            $('.datepicker').datepicker({
                autoclose: true,
                startView: 'years',
                language: '{{ app.request.locale }}',
                todayHighlight: true
            });
        });
    </script>
{% endblock %}
