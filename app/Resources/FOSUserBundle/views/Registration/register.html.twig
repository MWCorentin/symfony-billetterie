{% extends "app/form.html.twig" %}

{% block content %}
    {{ form_start(form, {'method': 'post', 'action': path('fos_user_registration_register'), 'attr': {'class': 'fos_user_registration_register'}}) }}
    <div class="panel">
        <div class="panel-heading">
            <div class="panel-title">{{ 'app.user.register.title'|trans }}</div>
        </div>
        <div class="panel-body">
            <div class="row">
                <div class="col-md-3">
                    {{ form_row(form.email) }}
                </div>
                {% for children in form.plainPassword.children %}
                    <div class="col-md-3">
                        {{ form_row(children) }}
                    </div>
                {% endfor %}
                <div class="col-md-3">
                    {{ form_label(form.civility) }}
                    <div class="row">
                        {% for children in form.civility.children %}
                            <div class="col-md-6">
                                {{ form_row(children) }}
                            </div>
                        {% endfor %}
                    </div>
                </div>
            </div>
            <hr>
            <div class="row">
                <div class="col-md-3">
                    {{ form_row(form.lastName) }}
                </div>
                <div class="col-md-3">
                    {{ form_row(form.firstName) }}
                </div>
                <div class="col-md-3">
                    {{ form_row(form.birthdayDate) }}
                </div>
                <div class="col-md-3">
                    {{ form_row(form.idNumber) }}
                </div>
            </div>
            <hr>
            <div class="row">
                <div class="col-md-3">
                    {{ form_row(form.address) }}
                </div>
                <div class="col-md-3">
                    {{ form_row(form.city) }}
                </div>
                <div class="col-md-3">
                    {{ form_row(form.zipCode) }}
                </div>
                <div class="col-md-3">
                    {{ form_row(form.phone) }}
                </div>
            </div>
        </div>
        <div class="panel-footer text-center">
            <input type="submit" class="btn btn-lg btn-success" id="_submit" name="_submit"
                   value="{{ 'common.button.save'|trans }}"/>
        </div>
    </div>
    {{ form_end(form) }}
{% endblock content %}
