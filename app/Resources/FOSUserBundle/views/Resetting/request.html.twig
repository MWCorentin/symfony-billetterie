{% extends "app/layout.html.twig" %}

{% block content %}
    <div class="panel col-md-6 col-md-offset-3">
        <div class="panel-heading">
            <div class="panel-title">{{ 'app.user.resetting.title'|trans }}</div>
        </div>
        <div class="panel-body">
            <form action="{{ path('fos_user_resetting_send_email') }}" method="POST" class="fos_user_resetting_request">
                <div>
                    <label for="username">{{ 'app.user.resetting.request.username'|trans }}</label>
                    <input type="text" id="username" name="username" required="required"/>
                </div>
                <div>
                </div>
            </form>
        </div>
        <div class="panel-footer text-center">
            <input type="submit" class="btn btn-success" value="{{ 'app.user.resetting.request.submit'|trans }}"/>
        </div>
    </div>
{% endblock content %}
